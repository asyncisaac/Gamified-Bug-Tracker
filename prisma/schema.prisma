generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  level     Int       @default(1)
  xp        Int       @default(0)
  bugs      Bug[]
}

model Bug {
  id            Int           @id @default(autoincrement())
  title         String
  description   String
  status        String        @default("open")
  points         Int          @default(1)
  userId        Int
  user          User          @relation(fields: [userId], references: [id])
}